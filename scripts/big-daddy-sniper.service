[Unit]
Description=Big Daddy Sniper Discord Bot
After=network.target

[Service]
Type=simple
User=ec2-user
WorkingDirectory=/home/ec2-user/big-daddy-sniper
ExecStart=/home/ec2-user/.bun/bin/bun run src/index.ts
Restart=on-failure
RestartSec=10
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target
